<h1>All tags</h1>

<ul id="tags">
<% @tags.each do |tag| %>
    <li>
        <%= link_to tag.name, tag_path(tag) %>
        (<%= tag.articles.count %>)
        <%= link_to "Delete", tag_path(tag), data: {confirm: "remove all instances of this tag"}, method: :delete %>
    </li>
  <% end %>
</ul>

<%= link_to "Back to articles", articles_path %>